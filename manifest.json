{
  "manifest_version": 3,
  "name": "VacLive",
  "version": "1.8",
  "description": "Info Relevance Checker - Автономный анализ",
  
  "icons": {
    "32": "pictures/icon32.png",
    "48": "pictures/icon48.png",
    "128": "pictures/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "VacLive"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [{
    "resources": ["pictures/icon48.png"],
    "matches": ["<all_urls>"]
  }]
}
