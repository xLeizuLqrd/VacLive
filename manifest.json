{
  "manifest_version": 3,
  "name": "VacLive",
  "version": "1.3",
  "description": "Info Relevance Checker",
  
  "icons": {
  "32": "pictures/icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "VacLive"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}